<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/settings_header"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="32sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView15">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/search_card"
            android:foregroundGravity="center_horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/help_search"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="64dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/help_search_placeholder"
                    android:inputType="text"
                    android:padding="8dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:padding="8dp"
                    android:src="@drawable/search_icon"
                    android:contentDescription="@string/view_more"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/PrivacyPolicyItems"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/searchInput"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="32dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/background_settings_tabs"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingHorizontal="8dp"
                    android:contentDescription="@string/view_more"
                    android:src="@drawable/settings_language"
                    app:tint="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:paddingHorizontal="8dp"
                    android:text="@string/settings_language"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:paddingHorizontal="8dp"
                    android:contentDescription="@string/view_more"
                    android:src="@drawable/nav_settings_arrow"
                    app:tint="@android:color/holo_red_dark" />
            </LinearLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_height="1dp"
                android:background="@android:color/holo_red_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/background_settings_tabs"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingHorizontal="8dp"
                    android:contentDescription="@string/view_more"
                    android:src="@drawable/settings_dark_mode"
                    app:tint="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:paddingHorizontal="8dp"
                    android:text="@string/settings_dark_mode"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch1"
                    android:layout_width="20dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center|end"
                    android:paddingHorizontal="8dp"
                    app:tint="@android:color/holo_red_dark"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_height="1dp"
                android:background="@android:color/holo_red_dark" />

            <LinearLayout
                android:id="@+id/aboutButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/background_settings_tabs"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingHorizontal="8dp"
                    android:contentDescription="@string/view_more"
                    android:src="@drawable/nav_about"
                    app:tint="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:paddingHorizontal="8dp"
                    android:text="@string/settings_about"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:paddingHorizontal="8dp"
                    android:contentDescription="@string/view_more"
                    android:src="@drawable/nav_settings_arrow"
                    app:tint="@android:color/holo_red_dark" />
            </LinearLayout>

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_height="1dp"
                android:background="@android:color/holo_red_dark" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>